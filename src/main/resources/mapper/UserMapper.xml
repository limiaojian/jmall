<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jmall.mapper.UserMapper">

    <select id="findById" resultType="com.jmall.model.User" parameterType="int">
        select * from user where id = #{id}
    </select>

    <select id="findAll" resultType="com.jmall.model.User">
        select * from user
    </select>

    <insert id="add" parameterType="com.jmall.model.User">
        insert into user(name,age) values (#{name},#{age})
    </insert>
</mapper>